@model Hashdji.Software.Shop.Models.PaginedViewModel

<div class="tr-pagination text-center">
    <ul class="pagination">
        <li class="float-left"><a class="page-numbers" href="#">Prev</a></li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == 10)
            {
                <li><a class="page-numbers" href="#">...</a></li>
            }

            if (i > 9 && i < Model.PageCount - 4)
            {
                continue;
            }

            var classValue = (i == Model.Page) ? "active" : "page-numbers";
            <li><a class="@classValue" href="@string.Concat(Model.Route,"?page=", i)">@i</a></li>
        }
        <li class="float-right"><a class="page-numbers" href="#">Next</a></li>
    </ul>
</div><!-- /.tr-pagination --> 